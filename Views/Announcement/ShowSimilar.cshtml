@model IEnumerable<AnnouncementMVC.Models.Entities.Announcement>

<h1>Similar Announcements</h1>

@if (!Model.Any())
{
    <p>No similar announcements found.</p>
}
else
{
    <table class="table">
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnnouncementDetail.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnnouncementDetail.DateAdded)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>